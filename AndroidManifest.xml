<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kickr"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
             android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".UpdateMatchStats"
            android:label="@string/app_name" 
             android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".TeamplayersActivity"
            android:label="@string/title_activity_teamplayers" 
             android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Statistics"
            android:label="@string/title_activity_match_updates" 
             android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".TeamOverall"
            android:label="@string/title_activity_favourites"
             android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".PlayersActivity"
            android:label="@string/title_activity_players"
             android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Favourites"
            android:label="@string/favourites"
             android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Fixtures"
            android:label="@string/app_name"
             android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LiveMatches"
            android:label="@string/livematches" >
        </activity>
        <activity
            android:name=".FixtureInfoActivity"
            android:label="@string/fixtureInfo" >
        </activity>
        <activity
            android:name=".EnterMatchInfo"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".CommonContribute"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name=".AddPlayersOverall"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
